{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "extends": [
    "plugin:json/recommended",
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "global-require": 0,
    "no-debugger": 0,
    "no-console": 0,
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "vue/no-unused-vars": "error"
  }
}
